{
  "env": {
    "browser": false,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "warn",
    "prefer-const": "error"
  },
  "ignore": [
    "node_modules",
    "dist",
    "build",
    "*.config.js",
    "*.config.ts"
  ]
}
